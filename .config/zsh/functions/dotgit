#dotgit(){
local repo="${DOTFILES:-$HOME/.dotfiles}"

# 1) Ensure the bare repo exists
  if [[ ! -d $repo ]]; then
    echo "Error: dotfiles repo not found at $repo" >&2
    return 1
  fi

# 2) Delegate to git, setting GIT_DIR and GIT_WORK_TREE
#    - If no args, show a concise status.
  if (( $# )); then
    GIT_DIR="$repo" GIT_WORK_TREE="$HOME" git "$@"
  else
    GIT_DIR="$repo" GIT_WORK_TREE="$HOME" git status --short
  fi
#}